{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "paths": {
        "@assets/*": ["./src/assets/*"],
        "@components/*": ["./src/components/*"],
        "@interfaces/*": ["./src/interfaces/*"],
        "@layouts/*": ["./src/layouts/*"],
        "@pages/*": ["./src/pages/*"],
        "@services/*": ["./src/services/*"],
        "@styles/*": ["./src/styles/*"],
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
}